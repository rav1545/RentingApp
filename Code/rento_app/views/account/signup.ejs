<%- include ('../partials/header') %>
<%- include ('../partials/navigation') %>

<div class="container">
  <div class="row">
    <div class="col-md-8 m-auto">
      <h1 class="mt-4 mb-4">Sign Up Page</h1>
      <% if(errorMsg != null && errorMsg.length>0) {%>
      <div id="flash-msg" class="alert alert-danger">
        <%=errorMsg %>
      </div>
      <%}%>
      <form action="/account/signup" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" class="form-control" name="name" id="name" placeholder = "Rey Mysterio" required/>
        </div>
        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input type="phone" class="form-control" name="phone" id="phone" placeholder = "(619)000-0000"/>
        </div>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" name="email" id="email" placeholder = "smackdown@wwe.org"/>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
          <span class = "Validation">It is recommended to at least :</span>
          <br><span class = "Validation">Include a lowercase letter</span>
          <br><span class = "Validation">Include an uppercase letter</span>
          <br><span class = "Validation">Include a number</span>
          <br><span class = "Validation">Has a minimum of 8 characters</span>
        </div>
        <div class="form-group">
          <label for="password2">Verify Password</label>
          <input type="password" class="form-control" name="password2" id="password2"/>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button type="submit" class="btn btn-primary button-style">
          Sign Up
        </button>
        <br><span>Please read the <a class = "signup" href="/pages/policy" title="Shipping Policy"> RentO's Policy</a> before making an account.</span>
        <span><br>Already have an account? <a class = "signup" href="/account/signin" title="Sign In">Sign In!</a></span>
      </form>
    </div>
  </div>
</div>  

<%- include ('../partials/footer') %>